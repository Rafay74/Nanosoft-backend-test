{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "baseUrl": "./src",
      "paths": {
        "~/*": ["*"]
      }
    },
    "typeRoots" : ["./src/types", "./node_modules/@types"],

    "exclude": ["node_modules", "dist"]
  }
  